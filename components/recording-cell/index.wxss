@import "/style/button-group.wxss";

/* 录音单元格容器 */
.recording-cell {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 15px;
  border: 1px solid var(--solid-border-color);
  border-radius: 9px;
  background: #fff;
}

/* 录音信息区域 */
.recording-cell__info {
  flex: 1;
  min-width: 0;
}

.recording-cell__time {
  font-size: 14px;
  font-weight: bold;
  color: #000;
}

.recording-cell__duration {
  font-size: 12px;
  color: rgba(0, 0, 0, 0.6);
  margin-top: 4px;
}

/* 操作按钮区域 */
.recording-cell__actions {
  display: flex;
  align-items: center;
  gap: 10px;
  margin-left: 15px;
}

/* 点击效果 */
.tap-active {
  opacity: 0.7;
}

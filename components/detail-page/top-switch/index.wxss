/* 置顶开关组件样式 */
.top-switch-block {
  margin-top: 15px;
  padding: 15px;
  border: 1px solid var(--solid-border-color);
  border-radius: 9px;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

/* 左侧提示文字 */
.top-switch__hint {
  font-size: 14px;
  color: #000000;
}

/* 右侧容器：tag + switch */
.top-switch__right {
  display: flex;
  align-items: center;
  gap: 10px;
}

/* 置顶开关组件样式 */
.top-switch-block {
  margin-top: 15px;
  padding: 15px;
  border: 1px solid var(--solid-border-color);
  border-radius: 9px;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.top-switch__content {
  display: flex;
  align-items: center;
  gap: 10px;
}

.top-switch__text {
  font-size: 12px;
  color: rgba(0, 0, 0, 0.3);
}

.top-switch__text--on {
  color: var(--main-green-color);
}

.sentence-body {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
}

.sentence__playing {
  background: red;
}

.sentence__first {
  display: flex;
  align-items: center;
  gap: 8px;
  color: #ffffff;
  background: var(--old-main-color);
  padding: 6px 10px;
  border-radius: 3px;
  font-size: 14px;
  line-height: 1.4;
}

.sentence__first-img {
  width: 20px;
  min-width: 20px;
  height: 20px;
  min-height: 20px;
}

.sentence__content {
  width: 100%;
  display: flex;
  flex-direction: row;
  line-height: 1.4;
}

.sentence__content-img {
  width: 20px;
  min-width: 20px;
  height: 20px;
  min-height: 20px;
  position: relative;
}

.sentence__content-tag {
  padding: 2px 4px;
  border-radius: 3px;
  box-sizing: border-box;
  font-size: 8px;
  line-height: 1;
  background: #000000;
  color: #ffffff;
  position: relative;
  top: -3px;
}

.sentence__content-no-tag {
  width: 7px;
  height: 7px;
  border-radius: 50%;
  background: #000000;
  position: relative;
  top: 8px;
  left: 25%;
}

.sentence__content-user {
  color: #00aaaa !important;
}

.sentence__content-update {
  text-decoration: underline
}

.sentence__content-translate {
  font-size: 14px;
  line-height: 1.4;
  color: rgba(0, 0, 0, 0.6);
  margin-top: 10px;
}

.sentence__img {
  margin-top: 10px;
}

.sentence__content-secondary {
  color: var(--solid-border-color);
}

.sentence__content-secondary .sentence__content-no-tag {
  background: var(--solid-border-color);
}

/* 句子 */
.analysis_underline_cell {
  border-bottom: 1px solid var(--solid-border-color);
}

.analysis_tag_cell {
  display: inline-block;
  border: 1px solid var(--solid-border-color);
  border-radius: 3px;
  margin-right: 10px;
  white-space: nowrap;
}

.analysis_tag_cell text {
  display: inline-block;
  padding: 2px 10px;
  line-height: 1.4;
}

.text-left {
  position: relative;
  border-right: 1px solid var(--solid-border-color);
}

.green_text {
  color: #00aaaa !important;
}

/* ============================================================
   answer-cell 与 inspiration-block 区分样式
   ============================================================ */

/* answer-cell 主体文字（英文答案） */
.en_answer {
  font-size: 15px;
  line-height: 1.4;
}

/* answer-cell 翻译（中文翻译） */
.cn_translate {
  font-size: 14px;
  line-height: 1.4;
  color: rgba(0, 0, 0, 0.6);
  margin-top: 10px;
}

/* inspiration-block 主体文字 */
.main_text {
  font-size: 15px;
  line-height: 1.4;
}

/* inspiration-block 翻译（补充说明） */
.supplementary_text {
  font-size: 14px;
  line-height: 1.4;
  color: rgba(0, 0, 0, 0.6);
  margin-top: 10px;
}
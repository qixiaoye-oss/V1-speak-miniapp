.version-tabs {
  display: flex;
  flex-wrap: wrap;
  gap: 10px;
  margin-top: 15px;
}

.version-tabs__item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 3px 9px;
  border-radius: 3px;
  font-size: 14px;
  border: 1px solid var(--solid-border-color);
  background: #ffffff;
  position: relative;
}

.version-tabs__item--active {
  border: 1px solid transparent;
}

.version-tabs__preferred {
  position: absolute;
  right: -10px;
  top: -10px;
  width: 20px;
  height: 20px;
}

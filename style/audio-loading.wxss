/* 音频加载圆饼进度样式 */
.audio-loading-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.audio-loading-pie {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  border: 1px solid #ccc;
  box-sizing: border-box;
}

.audio-loading-text {
  margin-top: 16px;
  color: #333;
  font-size: 14px;
}

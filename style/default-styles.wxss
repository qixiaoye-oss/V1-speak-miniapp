/* 通用默认样式表 */
/* 首页 */
.home {
  display: flex;
  flex-direction: column;
  gap: 15px;
}

.home-main-item {
  padding: 15px;
  border-radius: 9px;
  width: 100%;
  position: relative;
}

.home-main-item__title {
  font-weight: 600;
  text-align: left;
  margin-top: 5px;
  margin-bottom: 15px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 50%;
  font-size: 18px;
}

.home-main-item__content {
  display: flex;
  flex-direction: column;
  gap: 15px;
}

.home-main-item__content--grid {
  display: grid;
  grid-column-gap: 10px;
  grid-row-gap: 10px;
  grid-template-columns: repeat(2, 1fr);
}

/* 说明徽章样式 */
.home-main-item__notice {
  position: absolute;
  right: 15px;
  top: 15px;
  display: flex;
  align-items: center;
  padding: 5px;
  border-radius: 3px;
  gap: 5px;
}

.home-main-item__notice-img {
  width: 25px;
  height: 25px;
  flex-shrink: 0;
}

.home-main-item__notice-text {
  font-size: 15px;
  line-height: 1;
}

/* ========== 卡片样式 (BEM规范) ========== */

/* 首页卡片基础样式 */
.home-card {
  overflow: hidden;
  border-radius: 6px;
  border: 1px solid transparent;
}

.home-card__content {
  padding: 15px;
  background: #ffffff;
  border-radius: 6px;
  position: relative;
}

/* 专项练习/套题训练卡片样式 */
.home-card--subject .home-card__header {
  display: flex;
  flex-direction: row;
  gap: 10px;
}

.home-card--subject .home-card__icon {
  flex-shrink: 0;
  width: 25px;
  height: 25px;
  position: relative;
  top: 2px;
}

.home-card--subject .home-card__title {
  font-size: 18px;
  font-weight: 600;
}

.home-card--subject .home-card__footer {
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 10px;
  margin-top: 10px;
  flex-wrap: wrap;
}

/* 补充说明卡片样式 */
.home-card--notice .home-card__content {
  padding: 15px;
}

.home-card--notice .home-card__category {
  font-size: 12px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom: 10px;
}

.home-card--notice .home-card__body {
  font-size: 14px;
  font-weight: normal;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
  position: relative;
  word-wrap: break-word;
  color: rgba(0, 0, 0, 0.3);
}

.home-card--notice .home-card__body-title {
  color: #000000;
  font-weight: normal;
}

.home-card--notice .home-card__body-separator {
  color: rgba(0, 0, 0, 0.3);
}

.home-card--notice .home-card__body-desc {
  color: rgba(0, 0, 0, 0.3);
}

.home-card--notice .home-card__meta {
  margin-top: 10px;
  font-size: 12px;
  line-height: 1.4;
  display: flex;
  align-items: center;
  gap: 5px;
}

.home-card--notice .home-card__meta image {
  width: 14px;
  height: 14px;
}

/* 查看所有操作区域 */
.home-view-all {
  margin-top: 15px;
  display: flex;
  align-items: center;
  font-size: 15px;
  line-height: 1;
}

.home-view-all > tap-action {
  margin-left: auto;
}

/* ========== 旧版卡片样式 (保留兼容) ========== */

.home-sub-item {
  overflow: hidden;
  border-radius: 6px;
  border: 1px solid transparent;
}

.home-sub-item__description {
  font-size: 14px;
  line-height: 1.4;
  color: #FFFFFF;
  padding: 5px 15px;
  border: 1px solid transparent;
  border-bottom: 0px;
}

.home-sub-item__content {
  padding: 15px;
  background: #FFFFFF;
  border-radius: 6px;
  position: relative;
}

.home-main-item__content .home-sub-item__content:after {
  content: " ";
  display: inline-block;
  height: 8px;
  width: 8px;
  border-width: 2px 2px 0 0;
  border-color: #b2b2b2;
  border-style: solid;
  -webkit-transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  top: -2px;
  position: absolute;
  top: 50%;
  margin-top: -5px;
  right: 15px;
}


.home-sub-item__header {
  display: flex;
  flex-direction: row;
  /* align-items: center; */
  gap: 10px;
  margin-right: 18px;
}

.home-sub-item__title--icon {
  flex-shrink: 0;
  width: 25px;
  height: 25px;
  position: relative;
  top: 2px;
}

.home-sub-item__title--text {
  font-size: 20px;
  font-weight: 600;
  /* white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis; */
}

.home-sub-item__footer {
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 10px;
  margin-top: 10px;
  flex-wrap: wrap;
}

.home-sub-item__content--small {
  padding: 15px;
  background: #FFFFFF;
  border-radius: 6px;
  position: relative;
}

.home-sub-item__content--small .home-sub-item__description--text {
  font-size: 12px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom: 10px;
}

.home-sub-item__content--small .home-sub-item__title--text {
  font-size: 14px;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
}

/* 通用布局样式 */
.main-page {
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  gap: 15px;
}

.main-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 15px;
  border: 1px dashed var(--dashed-border-color);
  border-radius: 9px;
  padding: 15px;
}

.main-item__title {
  display: flex;
  align-items: center;
  gap: 10px;
  height: 40px;
  border-radius: 28px;
  box-sizing: border-box;
  padding-inline: 15px;
}

.main-item__title--icon {
  flex-shrink: 0;
  width: 25px;
  height: 25px;
}

.main-item__title--text {
  font-size: 14px;
  color: rgba(0, 0, 0, 0.8);
  font-weight: bold;
}

.sub-item {
  width: 100%;
  border-radius: 9px;
  border: 1px solid var(--solid-border-color);
  align-items: center;
  justify-content: space-between;
  position: relative;
  box-sizing: border-box;
  overflow: hidden;
}

.sub-item__header {
  display: flex;
  align-items: center;
  box-sizing: border-box;
  gap: 10px;
  padding: 15px;
}

.sub-item__title {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 5px;
  border-radius: 3px;
  position: relative;
  left: -5px;
  gap: 10px;
  min-width: 0;
}

.sub-item__title--icon {
  flex-shrink: 0;
  width: 20px;
  height: 20px;
}

.sub-item__title--text {
  font-weight: bold;
  color: #000000;
  font-size: 16px;
}

.sub-item__intervals {
  width: 100%;
  height: 1px;
  background: var(--solid-border-color);
}

.sub-item__footer {
  display: flex;
  align-items: flex-start;
  gap: 10px;
  padding: 15px;
  width: 100%;
}

.sub-item__progress {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  gap: 10px;
  width: 0;
  flex-grow: 1
}
/**
 * 加载动效样式库
 * 包含：页面加载进度条 + 音频加载饼状蒙版 + 错误重试
 *
 * 使用方法：在 app.wxss 中引入
 * @import "style/page-loading.wxss";
 */

/* ========== 页面加载进度条 ========== */

.page-loading-bar {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 3px;
  background-color: #e0e0e0;
  z-index: 9999;
  overflow: hidden;
}

.page-loading-bar__inner {
  height: 100%;
  background: linear-gradient(90deg, #00A6ED, #00d4ff);
  transition: width 0.1s ease-out;
  position: relative;
}

/* 光泽扫过动画 */
.page-loading-bar__inner::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(
    90deg,
    transparent 0%,
    rgba(255, 255, 255, 0.4) 50%,
    transparent 100%
  );
  animation: shimmer 1.5s infinite;
}

@keyframes shimmer {
  0% {
    transform: translateX(-100%);
  }
  100% {
    transform: translateX(100%);
  }
}

/* ========== 音频加载饼状蒙版 ========== */

.audio-loading-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(255, 255, 255, 0.95);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.pie-progress {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  border: 1px solid #e0e0e0;
  box-sizing: border-box;
}

.audio-loading-text {
  margin-top: 15px;
  font-size: 14px;
  color: #666666;
}

/* ========== 加载失败重试 ========== */

.load-error {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60px 20px;
  gap: 20px;
}

.load-error__text {
  font-size: 16px;
  color: #999;
}

.load-error__btn {
  padding: 10px 30px;
  background: var(--theme-color, #00A6ED);
  color: #fff;
  border-radius: 6px;
  font-size: 15px;
}

.load-error__btn:active {
  opacity: 0.8;
}

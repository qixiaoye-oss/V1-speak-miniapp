page {
  /* 按钮边框样式1 */
  --btn-border-theme-1: 1px solid var(--solid-border-color);
  /* 按钮边框样式2 */
  --btn-border-theme-2: 2px solid var(--solid-border-color);
  /* 按钮边框样式-无边框 */
  --btn-border-theme: 2px solid transparent;
  /* 按钮边框宽 */
  --btn-border-width: 1px;
  /* 按钮边框宽 */
  --btn-border-width-2: 2px;
  /* 按钮边框颜色 */
  --btn-border-color: var(--solid-border-color);
  --btn-no-border-color: transparent;
  /* 按钮字体大小 */
  --btn-font-size: 15px;
  /* 按钮字体行距 */
  --btn-line-height: 1;
}


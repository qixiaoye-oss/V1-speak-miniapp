/* 页面内容区域 - 为底部固定按钮组留出空间 */
.page-content {
  box-sizing: border-box;
  /* 单层按钮组总高度: 67px + 20px + 15px = 102px (已包含gap) */
  padding-bottom: var(--button-group-total-height-single);
}

.block {
  width: 100%;
  border-width: 1px;
  border-radius: 6px;
  border-style: solid;
  border-color: var(--solid-border-color);
  box-sizing: border-box;
}

.block__header {
  width: 100%;
  padding: 15px 10px;
  box-sizing: border-box;
  position: relative;
  display: flex;
}

.block__header-title {
  padding: 6px;
  border-radius: 3px;
  font-weight: 600;
  display: flex;
  align-items: center;
  box-sizing: border-box;
}

.block__title-icon {
  min-width: 20px;
  width: 20px;
  min-height: 20px;
  height: 20px;
  margin-right: 8px;
}

.block__title-text {
  line-height: 1.4;
}

/* 主要部分 */
.block-body {
  width: 100%;
  border-width: 1px;
  border-radius: 9px;
  border-style: solid;
  border-color: var(--solid-border-color);
  box-sizing: border-box;
}

.block-body__intervals {
  width: 100%;
  height: 1px;
  background: var(--solid-border-color);
}

.block-body__content {
  padding: 15px;
  display: flex;
  flex-direction: column;
  gap: 15px;
}

.paragraph {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}

.paragraph__title {
  background: rgba(0, 0, 0, 0.4);
  padding: 2px 10px;
  color: #FFFFFF;
  border-radius: 3px;
  font-size: 14px;
  margin-bottom: 10px;
}

.paragraph__content {
  width: 100%;
  border-width: 1px;
  border-radius: 3px;
  border-style: dashed;
  border-color: var(--dashed-border-color);
  box-sizing: border-box;
  padding: 15px 15px 5px 15px;
}

.paragraph__content-sentence {
  margin-bottom: 10px;
  border-radius: 3px;
}
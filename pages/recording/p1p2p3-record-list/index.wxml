<import src="/templates/page-loading.wxml"/>
<import src="/templates/load-error.wxml"/>
<template is="pageLoading" data="{{loading, loadProgress}}"/>
<template is="loadError" data="{{loadError}}"/>

<question-content
  wx:if="{{!loadError && detail}}"
  content="{{detail.content || detail.question || ''}}"
  additionalContent="{{detail.additionalContent || ''}}"
  supplementaryContent="{{detail.supplementaryContent || ''}}"
  backgroundColor="{{background}}"
  borderColor="{{color}}"
/>
<view wx:for="{{list}}" wx:key="item" class="recording_cell layout_flex f_ac f_jb" wx:if="{{!loadError}}">
  <view class="recording_cell__info" hover-class="tap-active" bind:tap="toDetail" data-id="{{item.id}}">
    <view class="recording_cell__time">{{item.recordingTime}}</view>
    <view class="recording_cell__duration">{{item.duration}}ç§’</view>
  </view>
  <view class="recording_cell__actions">
    <tap-action type="button" icon="{{item.playStatus === 'play' ? 'stop' : 'play'}}" bind:tap="togglePlay" data-index="{{index}}">
      <image src="/images/v2/{{item.playStatus === 'play' ? 'stop' : 'play'}}_bt.png"></image>
    </tap-action>
    <tap-action type="button" icon="setting" bind:tap="audioBtn" data-id="{{item.id}}">
      <image src="/images/v2/setting_bt.png"></image>
    </tap-action>
  </view>
</view>

/* 首页样式 - 与参考项目对齐 */

/* 初始化提示（登录中） */
.init-loading {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  /* 底部 tabBar 约 100rpx，向上偏移使视觉居中 */
  padding-bottom: 100rpx;
}

.init-loading__text {
  font-size: 15px;
  color: #999;
  background: linear-gradient(
    90deg,
    #999 0%,
    #999 40%,
    #ccc 50%,
    #999 60%,
    #999 100%
  );
  background-size: 200% 100%;
  -webkit-background-clip: text;
  background-clip: text;
  color: transparent;
  animation: shimmer 1.5s ease-in-out infinite;
}

@keyframes shimmer {
  0% {
    background-position: 100% 0;
  }
  100% {
    background-position: -100% 0;
  }
}

/* 查看所有按钮中的图标 */
.home-view-all image {
  width: 20px;
  height: 20px;
}

/* 科普区域特殊样式 */
.home-main-item--science {
  background: #ffffff;
  border: 2px dotted var(--main-blue-color);
}

/* 瀑布流布局 */
.home-main-item__content--waterfall {
  display: flex;
  gap: 10px;
}

.waterfall-column {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 10px;
  min-width: 0;
}

.home-card--science {
  background: #ffffff !important;
  border-color: var(--main-blue-color) !important;
}

/* 小程序跳转导航卡片 */
.nav-cards {
  display: flex;
  gap: 10px;
  width: 100%;
}

.nav-cards > tap-action {
  flex: 1;
  min-width: 0;
}

.nav-card {
  padding: 15px;
  font-size: 16px;
  font-weight: bold;
  text-align: center;
  background: #ffffff;
  border: 2px dotted var(--main-blue-color);
  border-radius: 10px;
}

/* 首页样式 - 与参考项目对齐 */

/* 初始化提示（登录中） */
.init-loading {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  /* 底部 tabBar 约 100rpx，向上偏移使视觉居中 */
  padding-bottom: 100rpx;
}

.init-loading__text {
  font-size: 15px;
  color: #999;
  background: linear-gradient(
    90deg,
    #999 0%,
    #999 40%,
    #ccc 50%,
    #999 60%,
    #999 100%
  );
  background-size: 200% 100%;
  -webkit-background-clip: text;
  background-clip: text;
  color: transparent;
  animation: shimmer 1.5s ease-in-out infinite;
}

@keyframes shimmer {
  0% {
    background-position: 100% 0;
  }
  100% {
    background-position: -100% 0;
  }
}

/* 查看所有按钮中的图标 */
.home-view-all image {
  width: 20px;
  height: 20px;
}

/* 科普区域特殊样式 */
.home-main-item--science {
  background: #ffffff;
  border: 2px dotted var(--main-blue-color);
}

.home-card--science {
  background: #ffffff !important;
  border-color: var(--main-blue-color) !important;
}

/* 科普卡片内部样式微调 */
.home-card--science .home-card__body {
  display: block;
  overflow: hidden;
}

.home-card--science .home-card__body-title {
  display: block;
  font-size: 15px;
  font-weight: bold;
  line-height: 1.4;
  white-space: normal;
  margin-bottom: 5px;
}

.home-card--science .home-card__body-separator {
  display: none;
}

.home-card--science .home-card__body-desc {
  display: block;
  width: 100%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 小程序跳转区域样式 */
.miniprogram-links {
  display: flex;
  gap: 10px;
}

.miniprogram-links > tap-action {
  flex: 1;
}

.miniprogram-link-item {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 15px;
  border: 2px dotted var(--main-blue-color);
  border-radius: 9px;
  background: #ffffff;
}

.miniprogram-link-item__text {
  font-size: 16px;
  font-weight: bold;
  color: #333;
}

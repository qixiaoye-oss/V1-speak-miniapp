.mastered {
  border: 1px solid var(--solid-border-color);
  border-radius: 9px;
  padding: 15px;
  display: flex;
  align-items: center;
  gap: 10px;
  margin-bottom: 15px;
  height: 56px;
  box-sizing: border-box;
}

.mastered__title {
  font-size: 16px;
  font-weight: bold;
}

.mastered__switch {
  display: flex;
  align-items: center;
  gap: 3px;
  margin-left: auto;
}


/*swtich整体大小及背景色*/

.wx-switch-input--sel {
  border-color: transparent;
}

.chapter-cell {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 15px;
  flex: 1;
}

.chapter {
  width: 100%;
  border-width: 1px;
  border-radius: 9px;
  border-style: solid;
  border-color: var(--solid-border-color);
  box-sizing: border-box;
}

.chapter__header {
  width: 100%;
  padding: 15px;
  box-sizing: border-box;
  display: flex;
}

.chapter__header--vertical {
  flex-direction: column;
  align-items: flex-start;
}

.chapter__header-answers {
  display: flex;
  flex-wrap: wrap;
  gap: 10px;
  margin-top: 10px;
}

.chapter__header-title {
  padding: 5px;
  border-radius: 3px;
  font-weight: 600;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  position: relative;
  left: -5px;
  min-width: 0;
  gap: 10px;
}

.chapter__title-icon {
  flex-shrink: 0;
  width: 20px;
  height: 20px;
}

.chapter__title-text {
  line-height: 1.4;
  word-break: break-word;
}

.chapter__intervals {
  width: 100%;
  height: 1px;
  background: var(--solid-border-color);
}

.chapter__footer {
  padding: 15px;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  gap: 10px;
}

.chapter__footer--content {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  gap: 10px;
}

.footer__content--item {
  border-radius: 3px;
  border: 1px solid var(--solid-border-color);
  font-size: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  box-sizing: border-box;
}


.footer__content--item view {
  padding-inline: 8px;
  height: 20px;
  line-height: 20px;
  box-sizing: border-box;
}

.footer__content--item view:nth-child(2) {
  width: 1px;
  height: 20px;
  padding: 0;
  background-color: var(--solid-border-color);
}

.footer__meter-sv1 {
  color: rgba(0, 0, 0, 0.3);
}

.footer__meter-sv3 {
  color: rgba(0, 210, 106, 1);
}

.footer__meter-sv2 {
  color: rgba(255, 176, 45, 1);
}
/* 显示模式切换组件外边距 */
mode-switch {
  display: block;
  margin-bottom: 15px;
}

.series {
  margin-bottom: 15px;
  display: flex;
  flex-wrap: wrap;
  gap: 10px;
}

.series__item {
  border: 1px solid var(--solid-border-color);
  box-sizing: border-box;
  border-radius: 9px;
  padding: 10px;
  display: flex;
  align-items: center;
  gap: 10px;
}

.series__item view {
  padding: 5px 10px;
  border-radius: 30px;
  display: flex;
  align-items: center;
  gap: 10px;
}

.series__item image {
  width: 20px;
  height: 20px;
}

.series__active {
  border-color: rgba(248, 49, 47, 1);
}

/* 正文样式 */
.chapter-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 15px;
}

.chapter-group {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  border-width: 1px;
  border-radius: 9px;
  border-style: dashed;
  border-color: var(--dashed-border-color);
  box-sizing: border-box;
  padding: 15px;
  gap: 15px;
}

.chapter-group__header--layout {
  display: flex;
  align-items: center;
  justify-content: center;
}

.chapter-group__header {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 36px;
  border-radius: 28px;
  color: rgba(0, 0, 0, 0.8);
  box-sizing: border-box;
  padding-inline: 15px;
}

.chapter-group__icon {
  width: 20px;
  height: 20px;
  margin-right: 6px;
}

.chapter-cell {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 15px;
  flex: 1;
}

.chapter {
  width: 100%;
  border-width: 1px;
  border-radius: 6px;
  border-style: solid;
  border-color: var(--solid-border-color);
  box-sizing: border-box;
}

.chapter__header {
  width: 100%;
  padding: 15px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  gap: 10px;
}

.chapter__header--vertical {
  flex-direction: column;
  align-items: flex-start;
}

.chapter__header-answers {
  display: flex;
  flex-wrap: wrap;
  gap: 10px;
  margin-top: 10px;
  position: relative;
  left: -5px;
}

.chapter__header-title {
  padding: 5px;
  border-radius: 3px;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10px;
  position: relative;
  left: -5px;
  min-width: 0;
}

.chapter__title-icon {
  flex-shrink: 0;
  width: 20px;
  height: 20px;
}

.chapter__title-text {
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  line-height: 1.4;
}

.chapter__tag {
  flex-shrink: 0;
  display: flex;
  gap: 10px;
}


.chapter__intervals {
  width: 100%;
  height: 1px;
  background: var(--solid-border-color);
}

.chapter__footer {
  padding: 15px;
  display: flex;
  align-items: flex-start;
  gap: 10px;
}

.footer__right {
  display: flex;
  gap: 10px;
  flex-wrap: wrap;
}

.chapter__meter {
  font-size: 12px;
  border-width: 1px;
  border-style: solid;
  border-color: var(--solid-border-color);
  color: var(--solid-border-color);
  border-radius: 3px;
  display: flex;
  align-items: center;
}

.footer__meter-sv2,
.footer__meter-sv2 .chapter__meter-index {
  color: rgba(255, 176, 45, 1);
  border-color: rgba(255, 176, 45, 1);
}

.footer__meter-sv2 .chapter__meter-index::after {
  background: rgba(255, 176, 45, 1);
}

.footer__meter-sv3,
.footer__meter-sv3 .chapter__meter-index {
  color: rgba(0, 210, 106, 1);
  border-color: rgba(0, 210, 106, 1);
}

.footer__meter-sv3 .chapter__meter-index::after {
  background: rgba(0, 210, 106, 1);
}

.chapter__meter-index {
  padding: 2px 8px;
  line-height: 1.4;
  position: relative;
  overflow: hidden;
  box-sizing: border-box;
}

.chapter__meter-index::after {
  position: absolute;
  content: "";
  top: 0;
  right: 0;
  height: 30px;
  width: 1px;
  background: var(--solid-border-color);
}

.chapter__meter-count {
  padding: 2px 8px;
  line-height: 1.4;
  box-sizing: border-box;
  text-align: center;
}

/* 标签显示模式 */
.chapter__list--simple {
  display: flex;
  gap: 10px;
  flex-wrap: wrap;
}
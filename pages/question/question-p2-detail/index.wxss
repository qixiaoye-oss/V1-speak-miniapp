/* 覆盖全局 page padding-bottom，避免与按钮组间距计算冲突 */
page {
  padding-bottom: 0;
}

/* 页面内容区域 - 为底部固定按钮组留出空间 */
.page-content {
  box-sizing: border-box;
  /* 单层按钮组总高度(含hint): 67px + 39.6px + 20px + 15px = 141.6px (已包含gap) */
  padding-bottom: var(--button-group-total-height-single-with-hint);
}

.series {
  display: flex;
  flex-wrap: wrap;
  gap: 10px;
  margin-top: 15px;
}

.series__item {
  border: 1px solid var(--solid-border-color);
  box-sizing: border-box;
  border-radius: 9px;
  padding: 10px;
  display: flex;
  align-items: center;
  gap: 10px;
}


.series__item view {
  padding: 5px 10px;
  border-radius: 30px;
  display: flex;
  align-items: center;
  gap: 10px;
}

.series__item image {
  width: 20px;
  height: 20px;
}

.series__active {
  border-color: rgba(248, 49, 47, 1);
}

.link-block {
  margin-top: 15px;
  border: 1px solid var(--solid-border-color);
  border-radius: 9px;
  background: #FFFFFF;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.answer-link-block {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  width: calc(750rpx - 40px);
  border-bottom: 1px solid var(--solid-border-color);
}

.link-block__type {
  flex-shrink: 0;
  font-size: 14px;
  padding: 15px;
  text-align: center;
  box-sizing: border-box;
  white-space: nowrap;
}

.link-block__title {
  display: flex;
  align-items: center;
  box-sizing: border-box;
  flex-grow: 1;
  min-width: 0;
}

.link-block__title-content {
  max-width: 100%;
  border-radius: 40px;
  margin: 15px;
  padding: 6px 20px;
  display: flex;
  align-items: center;
  gap: 10px;
  overflow: hidden;
}

.link-block__title-img {
  flex-shrink: 0;
  width: 20px;
  height: 20px;
}

.link-block__title-text {
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.link-block__tag {
  flex-shrink: 0;
  font-size: 12px;
  color: rgba(0, 0, 0, 0.4);
  margin-right: 15px;
}

/* answer-cell 内容区样式 */
.answer-cell__content {
  border-radius: 3px;
}

.paragraph {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}
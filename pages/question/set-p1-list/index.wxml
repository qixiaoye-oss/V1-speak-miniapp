<import src="/templates/page-loading.wxml" />
<import src="/templates/load-error.wxml" />
<template is="pageLoading" data="{{loading, loadProgress}}" />
<template is="loadError" data="{{loadError}}" />

<!-- 骨架屏 -->
<skeleton type="list" loading="{{loading}}" rows="{{5}}" avatar="{{true}}" />

<view class="series" wx:if="{{!loading}}">
  <view class="series__item {{showMode === 'full'?'full__active':''}}" hover-class="tap-active" bind:tap="changeShowMode" data-mode="full">
    <image src="/images/v2/folder_bt.png"></image>
    <text>列表显示</text>
  </view>
  <view class="series__item {{showMode === 'simple'?'simple__active':''}}" hover-class="tap-active" bind:tap="changeShowMode" data-mode="simple">
    <image src="/images/v2/pin_bt.png"></image>
    <text>标签显示</text>
  </view>
</view>
<view class="chapter-container" wx:if="{{!loading}}">
  <view class="chapter-group" wx:for="{{list}}" wx:for-item="group" wx:for-index="groupIndex" wx:key="group" wx:if="{{!group.hidden}}">
    <view class="chapter-group__header--layout">
      <view class="chapter-group__header" style="background:{{group.titleBackgroundColor}};">
        <image class="chapter-group__icon" wx:if="{{group.iconUrl}}" src="{{group.iconUrl}}" />
        <text class="chapter-group__title">{{group.title}}</text>
      </view>
    </view>
    <view class="chapter-cell" wx:if="{{showMode === 'full'}}">
      <view class="chapter" wx:for="{{group.list}}" wx:for-item="chapter" wx:for-index="chapterIndex" wx:key="chapter" hover-class="tap-active" bind:tap="toUnit" data-item="{{chapter}}">
        <view class="chapter__header">
          <view class="chapter__header-title" style="background: {{chapter.titleBackgroundColor}};">
            <image class="chapter__title-icon" wx:if="{{chapter.iconUrl}}" src="{{chapter.iconUrl}}" />
            <view class="chapter__title-text">{{chapter.title}}</view>
          </view>
          <image class="chapter__header-mastered" wx:if="{{chapter.hasMastered}}" src="/images/v2/correct_bt.png"></image>
          <view class="chapter__tag">
            <view class="tag tag--red" wx:if="{{chapter.description}}">{{chapter.description}}</view>
            <view class="tag tag--orange" wx:if="{{chapter.isChargeable == 1}}">权限</view>
            <view class="tag tag--green" wx:if="{{chapter.isChargeable == 0}}">体验</view>
          </view>
        </view>
        <view class="chapter__intervals"></view>
        <view class="chapter__footer">
          <view class="chapter__footer--content">
            <view class="tag tag__multi tag__multi--gray" wx:if="{{chapter.signInCount == 0}}">
              <view>打卡/录音</view>
              <view class="tag__intervals"></view>
              <view>{{chapter.signInCount}}/{{chapter.childCount}}</view>
            </view>
            <view class="tag tag__multi tag__multi--orange" wx:if="{{chapter.signInCount > 0 && chapter.signInCount < chapter.childCount}}">
              <view>打卡/录音</view>
              <view class="tag__intervals"></view>
              <view>{{chapter.signInCount}}/{{chapter.childCount}}</view>
            </view>
            <view class="tag tag__multi tag__multi--green" wx:if="{{chapter.signInCount == chapter.childCount}}">
              <view>打卡/录音</view>
              <view class="tag__intervals"></view>
              <view>{{chapter.signInCount}}/{{chapter.childCount}}</view>
            </view>
          </view>
        </view>
      </view>
    </view>
    <view class="chapter__list--simple" wx:if="{{showMode === 'simple'}}">
      <view wx:for="{{group.list}}" class="chapter--mastered" wx:for-item="chapter" wx:for-index="chapterIndex" wx:key="chapter" hover-class="tap-active" bind:tap="toUnit" data-item="{{chapter}}">
        <view class="chapter__header-title " style="background: {{chapter.titleBackgroundColor}};">
          <image class="chapter__title-icon" wx:if="{{chapter.iconUrl}}" src="{{chapter.iconUrl}}" />
          <view class="chapter__title-text">{{chapter.title}}</view>
        </view>
        <image class="chapter--mastered-img " wx:if="{{chapter.hasMastered}}" src="/images/v2/correct_bt.png"></image>
      </view>
    </view>
  </view>
</view>
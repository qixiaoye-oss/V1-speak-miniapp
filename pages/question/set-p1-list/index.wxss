/* 显示模式切换组件外边距 */
mode-switch {
  display: block;
  margin-bottom: 15px;
}

/* 正文样式 */
.chapter-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 15px;
}

.chapter-group {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  border-width: 1px;
  border-radius: 9px;
  border-style: dashed;
  border-color: var(--dashed-border-color);
  box-sizing: border-box;
  padding: 15px;
  gap: 15px;
}

.chapter-group__header--layout {
  display: flex;
  align-items: center;
  justify-content: center;
}

.chapter-group__header {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 36px;
  border-radius: 28px;
  color: rgba(0, 0, 0, 0.8);
  box-sizing: border-box;
  padding-inline: 15px;
}

.chapter-group__icon {
  width: 20px;
  height: 20px;
  margin-right: 6px;
}

.chapter-cell {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 15px;
  flex: 1;
}

.chapter {
  width: 100%;
  border-width: 1px;
  border-radius: 6px;
  border-style: solid;
  border-color: var(--solid-border-color);
  box-sizing: border-box;
}

.chapter__header {
  width: 100%;
  padding: 15px;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  gap: 10px;
}

.chapter__header-mastered {
  width: 20px;
  height: 20px;
  flex-shrink: 0;
  position: relative;
  left: -5px;
}

.chapter__header-title {
  padding: 5px;
  border-radius: 3px;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10px;
  position: relative;
  left: -5px;
  min-width: 0;
}

.chapter__title-icon {
  flex-shrink: 0;
  width: 20px;
  height: 20px;
}

.chapter__title-text {
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  line-height: 1.4;
}

.chapter__tag {
  flex-shrink: 0;
  display: flex;
  gap: 10px;
  margin-left: auto;
}


.chapter__intervals {
  width: 100%;
  height: 1px;
  background: var(--solid-border-color);
}

.chapter__footer {
  padding: 15px 10px;
  display: flex;
  align-items: flex-start;
  gap: 10px;
}

.footer__meter-sv1 {
  color: rgba(0, 0, 0, 0.3);
}

.footer__meter-sv3 {
  color: var(--main-green-color);
}

.footer__meter-sv2 {
  color: var(--main-orange-color);
}

.chapter__footer--content {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  gap: 10px;
}

.footer__content--item {
  border-radius: 3px;
  border: 1px solid var(--solid-border-color);
  font-size: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  box-sizing: border-box;
}


.footer__content--item view {
  padding-inline: 8px;
  height: 20px;
  line-height: 20px;
  box-sizing: border-box;
}

.footer__content--item view:nth-child(2) {
  width: 1px;
  height: 20px;
  padding: 0;
  background-color: var(--solid-border-color);
}

/* 精简版显示 */
.chapter__list--simple {
  display: flex;
  gap: 10px;
  flex-wrap: wrap;
}

.chapter--mastered {
  position: relative;
}

.chapter--mastered .chapter--mastered-img {
  flex-shrink: 0;
  width: 20px;
  height: 20px;
  position: absolute;
  right: -4px;
  top: -10px;
}

.enlargement {
  zoom: 1.1;
}
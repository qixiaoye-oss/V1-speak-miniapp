/* 页面内容区域 - 为底部固定按钮组留出空间 */
page {
  box-sizing: border-box;
  /* 单层按钮组总高度: 67px + 20px + 15px = 102px (已包含gap) */
  padding-bottom: var(--button-group-total-height-single);
}

._index {
  color: var(--old-main-color);
  border: 1px solid var(--old-main-color);
  background: var(--background-color-1);
  margin-right: 10px;
}

.tip {
  border: 1px solid var(--solid-border-color);
  border-radius: 9px;
  margin-bottom: 15px;
  padding: 11px 15px;
}

.answer_container {
  box-sizing: border-box;
  border: 1px solid var(--solid-border-color);
  border-radius: 9px;
  background: #ffffff;
  position: relative;
  overflow: hidden;
}

.sentence_contailer {
  padding: 15px;
  display: flex;
  flex-direction: column;
  border-bottom: 1px solid var(--solid-border-color);
  gap: 15px;
}

.sentence_contailer:last-child {
  border-bottom: none;
}

.compare_cell {
  position: relative;
  margin-bottom: 20px;
}

.compare_cell text {
  display: inline-block;
  background: #c5c5c5;
  padding: 1px 10px;
  position: relative;
  z-index: 100;
  color: #ffffff;
}

.compare_cell::before {
  content: "";
  position: absolute;
  width: 100%;
  border-bottom: 1px dotted #c5c5c5;
}

.sentence_cell {
  width: 100%;
  box-sizing: border-box;
  line-height: 1.4;
  position: relative;
}

.sentence_cell:last-child {
  margin-bottom: 0px;
}

.sentence_index {
  color: #ffffff;
  background: rgba(0, 0, 0, 1);
  width: 17px;
  height: 17px;
  position: absolute;
  left: 5px;
  margin-top: 2px;
}

.secondary_index {
  background: rgba(0, 0, 0, 1);
  width: 8px;
  height: 2px;
  position: absolute;
  left: 4px;
  margin-top: 10px;
}

.font_color_grey {
  color: var(--old-main-color);
}

.un_audio_play {
  padding-left: 30px;
  background: #ffffff;
  box-sizing: border-box;
  border: 1px solid rgba(0, 0, 0, 0);
}

.audio_play {
  border-color: var(--old-main-color);
}

.sentence__img {
  margin-top: 15px;
}

/* 评分状态 */
.recording-result {
  display: flex;
  align-items: center;
  font-size: 12px;
  gap: 5px;
  flex-wrap: wrap;
}

.recording-result view {
  padding: 2px 8px;
  border-radius: 3px;
}

.recording-score {
  display: flex;
  align-items: center;
  gap: 5px;
}

.score-intervals {
  display: inline-block;
  width: 1px;
  height: 16px;
}

.recording-fluency {
  color: rgba(0, 122, 207, 1);
  background: rgba(0, 122, 207, 0.15);
}

.recording-success {
  color: rgba(14, 174, 174, 1);
  background: rgba(14, 174, 174, 0.15);
}

.recording-error {
  color: rgba(248, 49, 47, 1);
  background: rgba(248, 49, 47, 0.15);
}

/* 录音状态显示 */
.recording {
  border: 1px solid var(--solid-border-color);
  border-radius: 6px;
  padding: 10px;
  display: grid;
  grid-template-columns: 2fr 1fr 2fr;
  align-items: center;
}

.recording__left {
  display: flex;
  align-items: center;
  gap: 10px;
  font-size: 14px;
  color: rgba(248, 49, 47, 1);
}

.recording__status-none {
  flex-shrink: 0;
  width: 31px;
  height: 31px;
  border: 1px solid var(--solid-border-color);
  border-radius: 50%;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

.recording__status-none::after {
  position: absolute;
  content: "";
  width: 13px;
  height: 13px;
  background: rgba(248, 49, 47, 1);
  border-radius: 50%;
}

.recording__status-active {
  flex-shrink: 0;
  flex-shrink: 0;
  width: 31px;
  height: 31px;
  border: 1px solid rgba(248, 49, 47, 1);
  border-radius: 50%;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

.recording__status-active::after {
  position: absolute;
  content: "";
  width: 13px;
  height: 13px;
  background: rgba(248, 49, 47, 1);
  border-radius: 50%;
}

.recording__img {
  width: 12px;
  height: 9px;
}

.recording__middle {
  display: flex;
  align-items: center;
  justify-content: center;
}

.recording__file-empty {
  font-size: 14px;
  color: var(--solid-border-color);
}

.recording__status-img {
  width: 14px;
  height: 15px;
}

.recording__right {
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.audio-file__tag {
  padding: 2px 8px;
  font-size: 12px;
  background: #FFB02E26;
  color: var(--main-orange-color);
  border-radius: 3px;
}

.audio__play {
  display: flex;
  align-items: center;
  justify-content: center;
}

.audio__play-img {
  width: 14px;
  height: 15px;
}

.audio__play-pause-img {
  width: 13px;
  height: 15px;
}
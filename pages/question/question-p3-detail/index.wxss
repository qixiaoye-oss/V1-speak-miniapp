/* 覆盖全局 page padding-bottom，避免与按钮组间距计算冲突 */
page {
  padding-bottom: 0;
}

/* 页面内容区域 - 为底部固定按钮组留出空间 */
.page-content {
  box-sizing: border-box;
  /* 单层按钮组总高度(含hint): 67px + 39.6px + 20px + 15px = 141.6px (已包含gap) */
  padding-bottom: var(--button-group-total-height-single-with-hint);
}

/* answer-cell 内容区样式 */
.answer-cell__content {
  border-radius: 3px;
}

.paragraph {
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  gap: 10px;
}

.paragraph__title {
  display: flex;
  align-items: center;
  justify-content: center;
}

.paragraph__title-text {
  background: var(--main-gray-color);
  padding: 2px 10px;
  color: #000000;
  border-radius: 3px;
  font-size: 14px;
}

.paragraph__content {
  width: 100%;
  border-width: 1px;
  border-radius: 3px;
  border-style: dashed;
  border-color: var(--solid-border-color);
  box-sizing: border-box;
  padding: 15px;
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.paragraph__content-sentence {}

.similar_cell {
  padding: 20px 20px;
  border: 0px;
  background: var(--background-color-1);
  margin: 0;
  border-bottom: 1px solid #ffffff;
}

.similar_cell:first-child {
  border-top-left-radius: 9px;
  border-top-right-radius: 9px;
}

.similar_cell:last-child {
  border-bottom-left-radius: 9px;
  border-bottom-right-radius: 9px;
}

.similar_tag_cell {
  border-radius: 3px;
  font-size: 14px;
  color: var(--old-main-color);
  border: 1px solid var(--old-main-color);
  display: inline-block;
  padding: 1px 10px;
  transform: scale(0.66);
  transform-origin: left top;
}

.mt10 {
  margin-top: 10px;
}
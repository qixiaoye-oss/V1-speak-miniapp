.user-page {
  background: var(--theme-bcakground-color);
  border-radius: 9px;
  display: flex;
  flex-direction: column;
  gap: 10px;
  padding: 15px;
  box-sizing: border-box;
}

.user-info {
  background-color: #ffffff;
  border: 1px solid var(--theme-color);
  border-radius: 6px;
  padding: 15px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 10px;
  box-sizing: border-box;
}

.user__avatar {
  width: 80px;
  height: 80px;
  border-radius: 50%;
}

.user__nickname {
  font-size: 16px;
  color: #000000;
  display: flex;
  flex-direction: column;
  align-items: center;
  line-height: 1.4;
}

.menu-item {
  background-color: #ffffff;
  border: 1px solid var(--theme-color);
  border-radius: 6px;
  padding: 15px;
  line-height: 1.4;
  font-size: 16px;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.menu-item__value {
  color: var(--theme-color);
}

.menu-item--access {
  position: relative;
}

.menu-item--access:after {
  content: " ";
  display: inline-block;
  height: 10px;
  width: 10px;
  border-width: 2px 2px 0 0;
  border-color: rgba(0, 0, 0, 0.4);
  border-style: solid;
  -webkit-transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: absolute;
  top: 20px;
  right: 15px;
}

.version {
  margin-top: 15px;
  width: 100%;
  font-size: 12px;
  text-align: center;
  color: #cccccc;
}